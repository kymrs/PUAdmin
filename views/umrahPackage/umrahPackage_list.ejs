          <div class="modal fade" id="umrahPackageFormModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-scrollable modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header border-0">
        <h5 class="modal-title">
          <span class="fw-mediumbold">Form</span>
          <span class="fw-light">Paket Umrah</span>
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <div class="modal-body" style="max-height: 80vh; overflow-y: auto; overflow-x: hidden;">
        <form id="umrahPackageForm">
          <div class="row">
            <input type="hidden" id="hidden_id">

            <div class="col-md-6">
              <div class="form-group form-group-default">
                <label>Nama Paket</label>
                <input id="name" type="text" class="form-control">
              </div>
            </div>

            <div class="col-md-6">
              <div class="form-group form-group-default">
                <label>Nama Travel</label>
                <select class="form-control" id="travel_agency_id">
                  <option value="" selected disabled>Pilih Opsi...</option>
                  <option value="1">Dummy</option>
                </select>
              </div>
            </div>

            <div class="col-md-6">
              <div class="form-group form-group-default">
                <label>Tipe Paket</label>
                <input id="package_type" type="text" class="form-control">
              </div>
            </div>

            <div class="col-md-6">
              <div class="form-group form-group-default">
                <label>Harga</label>
                <input id="price" type="text" class="form-control">
              </div>
            </div>

            <div class="col-md-6">
              <div class="form-group form-group-default">
                <label>Durasi</label>
                <input id="duration_days" type="text" class="form-control">
              </div>
            </div>

            <div class="col-md-6">
              <div class="form-group form-group-default">
                <label>Deskripsi</label>
                <input id="description" type="text" class="form-control">
              </div>
            </div>

            <div class="col-md-12">
              <div class="form-group form-group-default">
                <label>Fasilitas Termasuk</label>
                <div class="input-group mb-2">
                  <input id="facilityInput" type="text" class="form-control" placeholder="Tambah fasilitas">
                  <button type="button" id="addFacilityBtn" class="btn btn-success">Tambah</button>
                </div>
                <ul id="facilityList" class="list-group"></ul>
              </div>
            </div>

            <div class="col-md-12">
              <div class="form-group form-group-default">
                <label>Fasilitas Tidak Termasuk</label>
                <div class="input-group mb-2">
                  <input id="notFacilityInput" type="text" class="form-control" placeholder="Tambah fasilitas">
                  <button type="button" id="addNotFacilityBtn" class="btn btn-success">Tambah</button>
                </div>
                <ul id="notFacilityList" class="list-group"></ul>
              </div>
            </div>

            <div class="col-md-12">
              <div class="form-group form-group-default">
                <label>Itinerary</label>
                <div class="input-group mb-2">
                  <input id="itinerarInput" type="text" class="form-control" placeholder="Tambah Itinerary">
                  <button type="button" id="itineraryBtn" class="btn btn-success">Tambah</button>
                </div>
                <ul id="itineraryList" class="list-group"></ul>
              </div>
            </div>

          </div>
        </form>
      </div>

      <div class="modal-footer border-0">
        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
        <button type="button" id="submitUmrahPackageBtn" class="btn btn-primary">Save</button>
