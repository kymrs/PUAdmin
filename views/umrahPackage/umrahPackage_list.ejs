<script>
  const facilityInput = document.getElementById('facilityInput');
  const notFacilityInput = document.getElementById('notFacilityInput');
  const itineraryInput = document.getElementById('itineraryInput');
  const addFacilityBtn = document.getElementById('addFacilityBtn');
  const notFacilityBtn = document.getElementById('notFacilityBtn');
  const itineraryBtn = document.getElementById('itineraryBtn');
  const facilityList = document.getElementById('facilityList');
  const notFacilityList = document.getElementById('notFacilityList');
  const itineraryList = document.getElementById('itineraryList');

  function addFacility() {
    const value = facilityInput.value.trim();
    if (value) {
      const li = document.createElement('li');
      li.className = 'list-group-item d-flex justify-content-between align-items-center';
      li.textContent = value;

      const removeBtn = document.createElement('button');
      removeBtn.type = 'button';
      removeBtn.className = 'btn btn-sm btn-danger ms-2';
      removeBtn.textContent = 'Hapus';
      removeBtn.onclick = () => li.remove();

      li.appendChild(removeBtn);
      facilityList.appendChild(li);
      facilityInput.value = '';
    }
  }

  function addNotFacility() {
    const value = notFacilityInput.value.trim();
    if (value) {
      const li = document.createElement('li');
      li.className = 'list-group-item d-flex justify-content-between align-items-center';
      li.textContent = value;

      const removeBtn = document.createElement('button');
      removeBtn.type = 'button';
      removeBtn.className = 'btn btn-sm btn-danger ms-2';
      removeBtn.textContent = 'Hapus';
      removeBtn.onclick = () => li.remove();

      li.appendChild(removeBtn);
      notFacilityList.appendChild(li);
      notFacilityInput.value = '';
    }
  }

  function addItinerary() {
    const value = itineraryInput.value.trim();
    if (value) {
      const li = document.createElement('li');
      li.className = 'list-group-item d-flex justify-content-between align-items-center';
      li.textContent = value;

      const removeBtn = document.createElement('button');
      removeBtn.type = 'button';
      removeBtn.className = 'btn btn-sm btn-danger ms-2';
      removeBtn.textContent = 'Hapus';
      removeBtn.onclick = () => li.remove();

      li.appendChild(removeBtn);
      itineraryList.appendChild(li);
      itineraryInput.value = '';
    }
  }

  facilityInput.addEventListener('keydown', function (e) {
    if (e.key === 'Enter') {
      e.preventDefault();
      addFacility();
    }
  });

  notFacilityInput.addEventListener('keydown', function (e) {
    if (e.key === 'Enter') {
      e.preventDefault();
      addNotFacility();
    }
  });

  itineraryInput.addEventListener('keydown', function (e) {
    if (e.key === 'Enter') {
      e.preventDefault();
      addItinerary();
    }
  });

  addFacilityBtn.addEventListener('click', addFacility);
  notFacilityBtn.addEventListener('click', addNotFacility);
  itineraryBtn.addEventListener('click', addItinerary);
</script>
