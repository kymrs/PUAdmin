      <div class="row">
        <div class="col-md-12">
          <div class="card">
            <div class="card-header">
              <div class="d-flex align-items-center">
                <h4 class="card-title">User Level Table</h4>
                <a
                  data-bs-toggle="modal"
                  data-bs-target="#userlevelModal"
                  class="btn btn-primary btn-round ms-auto"
                  href=""
                >
                  <i class="fa fa-plus"></i>
                  Add Row
                </a>
              </div>
            </div>
            <div class="card-body">

              <div class="table-responsive">
                <table
                  id="userlevelTable"
                  class="display table table-striped table-hover"
                  style="width: 100%"
                >
                  <thead>
                    <tr>
                        <th>ID Level</th>
                        <th>Nama Level</th>
                      <th style="width: 10%">Action</th>
                    </tr>
                  </thead>
                  <tfoot>
                    <tr>
                      <th>ID Level</th>
                      <th>Nama Level</th>
                      <th>Action</th>
                    </tr>
                  </tfoot>
                  <tbody>
                    <% userlevel.forEach(function(user) {%>
                        <tr>
                            <td><%= user.id_level %></td>
                            <td><%= user.nama_level %></td>
                            <td>
                                <div class="form-button-action">
                                <a
                                    data-id="<%= user.id_level %>"
                                    class="btn btn-link btn-primary btn-lg userlevelEdit"
                                  >
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a
                                    type="button"
                                    data-bs-toggle="tooltip"
                                    data-id="<%= user.id_level %>"
                                    title=""
                                    class="btn btn-link btn-danger userlevelDelete"
                                    data-original-title="Remove"
                                  >
                                    <i class="fa fa-times"></i>
                                </a>
                                </div>
                              </td>
                        </tr>
                    <% } ); %>
                  </tbody>
                </table>
              </div>

            </div>

            <!-- MODAL ADD/EDIT DATA -->
            <div
              class="modal fade"
              id="userlevelModal"
              tabindex="-1"
              role="dialog"
              aria-hidden="true"
            >
              <div class="modal-dialog" role="document">
                <div class="modal-content">
                  <div class="modal-header border-0">
                    <h5 class="modal-title">
                      <span class="fw-mediumbold"> Form</span>
                      <span class="fw-light"> User Level </span>
                    </h5>
                    <button
                      type="button"
                      class="close"
                      data-bs-dismiss="modal"
                      aria-label="Close"
                    >
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <div class="modal-body">
                    <form id="userlevelForm">
                      <div class="row">
                        <div class="col-sm-12">
                          <div class="form-group form-group-default">
                            <label>Nama Level</label>
                            <input
                              id="nama_level"
                              type="text"
                              class="form-control"
                            />
                            <!-- HIDDEN INPUT -->
                             <input 
                              type="hidden"
                              id="hidden_id_userlevel"
                             />
                          </div>
                        </div>
                    </div>
                    </form>
                  </div>
                  <div class="modal-footer border-0">
                    <button
                      type="button"
                      class="btn btn-danger"
                      data-bs-dismiss="modal"
                    >
                      Close
                    </button>
                    <button
                      type="button"
                      id="submitUserlevel"
                      class="btn btn-primary userLevelBtn"
                    >
                      Save
                    </button>
                  </div>
                </div>
              </div>
            </div>

            <!-- MODAL HAK AKSES -->
            <div class="modal fade" id="aksesModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
              <div class="modal-dialog modal-xl">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel">Manajemen Akses Menu & Submenu</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                  <div class="modal-body" style="overflow-x: scroll;">
                    <%- include('./userAkses') %>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" id="submitAksesBtn" class="btn btn-primary">Save</button>
                  </div>
                </div>
              </div>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>