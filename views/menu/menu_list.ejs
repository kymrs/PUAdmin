<div class="flex-1 overflow-y-auto p-6 lg:p-10 scroll-smooth">

    <div class="mb-6 flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
        <div>
            <h2 class="text-2xl font-bold text-gray-800 dark:text-white">Daftar Menu</h2>
            <nav class="flex text-sm text-gray-500 dark:text-gray-400 mt-1">
                <a href="#" class="hover:text-primary-500 transition-colors">Settings</a>
                <span class="mx-2">/</span>
                <span class="text-gray-800 dark:text-gray-200">Menu</span>
            </nav>
        </div>

        <button onclick="openMenuModal()"
            class="flex items-center gap-2 px-4 py-2 bg-primary-600 hover:bg-primary-700 text-white rounded-xl transition-colors shadow-lg shadow-primary-500/30">
            <i class="ph ph-plus text-lg"></i>
            <span>Tambah Menu Baru</span>
        </button>
    </div>

    <div class="bg-white dark:bg-dark-card rounded-2xl shadow-sm border border-gray-100 dark:border-dark-border overflow-hidden mb-10">
        <div class="p-5 border-b border-gray-100 dark:border-dark-border flex flex-col md:flex-row md:items-center justify-between gap-4">
            <div class="relative w-full md:w-72">
                <i class="ph ph-magnifying-glass absolute left-3 top-1/2 -translate-y-1/2 text-gray-400 text-lg"></i>
                <input type="text" id="customSearchInput" placeholder="Cari menu..."
                    class="w-full pl-10 pr-4 py-2 rounded-xl bg-gray-50 dark:bg-slate-800 border border-gray-200 dark:border-slate-700 text-gray-700 dark:text-gray-200 focus:outline-none focus:ring-2 focus:ring-primary-500/20 focus:border-primary-500 transition-all">
            </div>
        </div>

        <div class="overflow-x-auto">
            <table id="menuTable" class="w-full text-left border-collapse">
                <thead>
                    <tr class="bg-gray-50 dark:bg-slate-800/50 border-b border-gray-100 dark:border-dark-border text-xs uppercase tracking-wider text-gray-500 dark:text-gray-400 font-semibold">
                        <th class="p-5 text-center w-24">Action</th>
                        <th class="p-5 whitespace-nowrap">Nama Menu</th>
                        <th class="p-5 whitespace-nowrap">Link / Route</th>
                        <th class="p-5 whitespace-nowrap">Icon</th>
                        <th class="p-5 whitespace-nowrap text-center">Urutan</th>
                        <th class="p-5 whitespace-nowrap">Status</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-100 dark:divide-dark-border">
                    </tbody>
            </table>
        </div>
    </div>
</div>

<div id="menuModal" class="fixed inset-0 z-[80] hidden" role="dialog" aria-modal="true">
    <div class="fixed inset-0 bg-black/50 backdrop-blur-sm transition-opacity" id="menuModalBackdrop"></div>
    <div class="fixed inset-0 z-10 overflow-y-auto">
        <div class="flex min-h-full items-center justify-center p-4">
            <div class="relative transform overflow-hidden rounded-2xl bg-white dark:bg-dark-card text-left shadow-xl transition-all sm:w-full sm:max-w-lg">
                <div class="px-6 py-4 border-b border-gray-100 dark:border-dark-border flex justify-between items-center">
                    <h3 class="text-lg font-bold text-gray-900 dark:text-white" id="modalTitle">Form Menu</h3>
                    <button type="button" onclick="closeMenuModal()" class="text-gray-400 hover:text-gray-600 dark:hover:text-gray-300">
                        <i class="ph ph-x text-xl"></i>
                    </button>
                </div>

                <form id="menuForm" class="p-6 space-y-4">
                    <input type="hidden" id="hidden_id_menu">
                    
                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Nama Menu</label>
                        <input type="text" id="nama_menu" class="w-full px-4 py-2 rounded-xl bg-gray-50 dark:bg-slate-800 border border-gray-200 dark:border-slate-700 focus:border-primary-500 outline-none transition-all dark:text-white">
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Link / Route</label>
                            <input type="text" id="link" class="w-full px-4 py-2 rounded-xl bg-gray-50 dark:bg-slate-800 border border-gray-200 dark:border-slate-700 focus:border-primary-500 outline-none transition-all dark:text-white">
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Icon (Phosphor)</label>
                            <input type="text" id="icon" placeholder="ph-squares-four" class="w-full px-4 py-2 rounded-xl bg-gray-50 dark:bg-slate-800 border border-gray-200 dark:border-slate-700 focus:border-primary-500 outline-none transition-all dark:text-white">
                        </div>
                    </div>

                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Urutan</label>
                            <input type="number" id="urutan" class="w-full px-4 py-2 rounded-xl bg-gray-50 dark:bg-slate-800 border border-gray-200 dark:border-slate-700 focus:border-primary-500 outline-none transition-all dark:text-white">
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Status</label>
                            <select id="is_active" class="w-full px-4 py-2 rounded-xl bg-gray-50 dark:bg-slate-800 border border-gray-200 dark:border-slate-700 focus:border-primary-500 outline-none transition-all dark:text-white">
                                <option value="Y">Active</option>
                                <option value="N">Inactive</option>
                            </select>
                        </div>
                    </div>
                </form>

                <div class="bg-gray-50 dark:bg-slate-800/50 px-6 py-4 flex justify-end gap-3 border-t border-gray-100 dark:border-dark-border">
                    <button onclick="closeMenuModal()" class="px-5 py-2 text-sm font-semibold text-gray-700 dark:text-gray-300">Batal</button>
                    <button id="submitMenuBtn" class="bg-primary-600 hover:bg-primary-700 text-white px-5 py-2 rounded-xl text-sm font-semibold transition-all shadow-lg shadow-primary-500/30">
                        Simpan Perubahan
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>