    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <div class="card-header">
            <div class="d-flex align-items-center">
              <h4 class="card-title">Transactions Table</h4>
              <a data-bs-toggle="modal" data-bs-target="#transactionFormModal" class="btn btn-primary btn-round ms-auto" href=""><i class="fa fa-plus"></i> Add Transaction</a>
            </div>
          </div>
          <div class="card-body">
            <div class="table-responsive" style="overflow-x: auto;">
              <table id="transactionsTable" class="display table table-striped table-hover w-100" style="width: 100%">
                <thead>
                  <tr>   
                    <th>Action</th>
                    <th>Nama</th>
                    <th>Tanggal</th>
                    <th>No Transaksi</th>
                    <th>Amount</th>
                    <th>Status</th>             
                  </tr>
                </thead>
                <tfoot>
                  <tr>
                    <th>Action</th>
                    <th>Nama</th>
                    <th>Tanggal</th>
                    <th>No Transaksi</th>
                    <th>Amount</th>
                    <th>Status</th>
                    
                  </tr>
                </tfoot>
                <tbody>
                  <!-- Data rows will be dynamically rendered here -->
                </tbody>
              </table>
            </div>
          </div>
          <!-- MODAL FORM TRAVEL -->
          <div class="modal fade" id="transactionFormModal" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header border-0">
                  <h5 class="modal-title"><span class="fw-mediumbold">Form Transaction</span> </h5>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                  <form id="transactionForm">
                    <div class="row"> 
                      <input type="hidden" id="hidden_id">

                      <div class="col-sm-12">
                        <div class="form-group form-group-default">
                          <label>Nama</label>
                          <input id="name" type="text" class="form-control">
                        </div>
                      </div>
                      <div class="col-sm-12">
                        <div class="form-group form-group-default">
                          <label>Tanggal</label>
                          <input id="transaction_date" type="date" class="form-control">
                        </div>
                      </div>
                      <div class="col-sm-12">
                        <div class="form-group form-group-default">
                          <label>No Transaksi</label>
                          <input id="transaction_no" type="text" class="form-control">
                        </div>
                      </div>
                      <div class="col-sm-12">
                        <div class="form-group form-group-default">
                          <label>Amount</label>
                          <input id="amount" type="amount" class="form-control">
                        </div>
                      </div>
                      <div class="col-sm-12">
                        <div class="form-group form-group-default">
                          <label>Status</label>
                          <input type="hidden" id="status" class="form-control">
                          <select name="status" id="status" class="form-control select2">
                            <option value="">Pilih Status</option>
                            <option value="Pending">PENDING</option>
                            <option value="Success">SUCCES</option>
                            <option value="Failed">FAILED</option>
                          </select>
                        </div>
                      </div>
                    </div>
                  </form>
                </div>
                <div class="modal-footer border-0">
                  <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
                  <button type="button" id="submitTransactionBtn" class="btn btn-success">Save Changes</button>
                </div>
              </div>
            </div>
          </div>
          <!-- END MODAL FORM -->
        </div>
      </div>
    </div>
