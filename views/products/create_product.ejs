<div class="container">
    <div class="page-inner">
     <div class="col-lg-12">
        <!-- PRODUK -->
        <form action="/products" method="POST" id="formProduct">
         <div class="row">
            <div class="col-lg-8">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Tambah Produk</div>
                        </div>
                        <div class="card-body row row-cols-2">
                                <div class="form-group col">
                                    <label class="col fw-bold">
                                        Nama Produk<span class="text-danger">*</span>
                                    </label>
                                    <div class="col">
                                        <input type="text" class="form-control" name="nama_produk" id="nama_produk" placeholder="Masukan Nama Produk" required>
                                    </div>
                                </div>
                                <div class="form-group col">
                                    <label class="col fw-bold">
                                        Kategori<span class="text-danger">*</span>
                                    </label>
                                    <div class="col">
                                        <select name="kategory" id="kategory" class="form-select kategory" >
                                                <option 
                                                disabled
                                                selected
                                                value="">Pilih kategori</option>
                                                
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group col">
                                    <label class="col fw-bold">
                                        Tanggal<span class="text-danger">*</span>
                                    </label>
                                    <div class="col">
                                        <input type="date" class="form-control" name="date" id="date" placeholder="Masukan Nama Produk" required>
                                    </div>
                                </div>
                                <div class="form-group col">
                                    <label class="col fw-bold">
                                        Durasi (Hari)<span class="text-danger">*</span>
                                    </label>
                                    <div class="col">
                                        <input type="number" class="form-control" name="duration" id="duration" placeholder="9 Hari" value="9" required>
                                    </div>
                                </div>
                                 <div class="form-group col">
                                    <label class="col fw-bold">
                                       Qouta<span class="text-danger">*</span>
                                    </label>
                                    <div class="col">
                                        <input type="number" class="form-control" name="kouta" id="kouta" placeholder="9 Hari" value="1" required>
                                    </div>
                                </div>
                                <div class="form-group col">
                                <label class="fw-bold">Fasilitas Tambahan<span class="text-danger">*</span></label>
                                    <div class="col">
                                        <a data-bs-toggle="modal" data-bs-target="#facilityFormModal" class="text-dark" href=""><i class="fa fa-plus"></i> Tambahkan Fasilitas Tambahan</a>
                                    </div>
                            </div>
                            <div class="form-group col">
                             <label class="col fw-bold">Departure Airline<span class="text-danger">*</span></label>
                            <div class="col">
                               <select name="flight_ids[]"           
                                        class="form-select form-control flight-select" >         
                                            <option></option>
                                </select>
                            </div>      
                        </div>
                        <div class="form-group col">
                            <label class="col fw-bold">Return Airline<span class="text-danger">*</span></label>
                            <div class="col">      
                                <select name="flight_ids[]"           
                                        class="form-select flight-select" >         
                                            <option></option>
                                </select>
                            </div>      
                        </div>
                                <div class="form-group col">
                                    <label class="col fw-bold">
                                        Deskripsi Produk<span class="text-danger">*</span>
                                    </label>
                                    <div class="col">
                                        <textarea name="product_description" id="product_description" class="form-control" rows="5" placeholder="Masukan Deskripsi Produk" required></textarea>
                                    </div>
                                </div>
                            <div class="modal  fade" id="facilityFormModal" tabindex="-1" 
                            aria-labelledby="facilityFormModalLabel" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered">
                                <div class="modal-content" style="border-radius: 15px; border: none; background-color: #f8f9fa;">
                                
                                <div class="modal-header border-0 pb-0">
                                    <!-- <nav aria-label="breadcrumb">
                                    <ol class="breadcrumb mb-1" style="font-size: 0.85rem;">
                                        <li class="breadcrumb-item"><a href="#" class="text-decoration-none text-muted">Damien</a></li>
                                        <li class="breadcrumb-item"><a href="#" class="text-decoration-none text-muted">Projects</a></li>
                                        <li class="breadcrumb-item active" aria-current="page">New Build</li>
                                    </ol>
                                    </nav> -->
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>

                                <div class="modal-body pt-1">
                                    <h4 class="modal-title mb-3" id="partsModalLabel">Fasilitas Tambahan</h4>
                                    
                                    <p class="text-muted small fw-bold text-uppercase mb-2">Include & Exclude</p>

                                    <div class="list-group gap-2" id="facility-list-container">

                                    </div>
                                    <form id="facilityInputForm">
                                        <div class="formAddFacility" id="formAddFacility">
                                        </div>
                                    </form>
                                    
                                </div>
                                </div>
                            </div>
                            </div>
                            <div class="form-group col">
                                    <label class="col fw-bold  form-label">Status</label>
                                        <div class="col">
                                            <select name="status" class="form-select">
                                                <option value="DRAFT">Draft</option>
                                                <option value="ACTIVE">Publish</option>
                                            </select>
                                        </div>                     
                            </div>
                            <div class="form-group col">
                                    <label class="col fw-bold">
                                        Thumbnail Produk<span class="text-danger">*</span>
                                    </label>
                                    <div class="col">
                                        <input type="file" class="form-control-file" name="thumbnail" onchange="validateFileExtension(this)">
                                    </div>
                            </div>
                                
                        </div>
                    </div>
            </div>    
             <div class="col-lg-4 ">
                  <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Hotel</h4>
                        </div>
                        <div class="card-body"> 
                                <div class="form-group col ">
                                    <label class="col fw-bold">Hotel<span class="text-danger">*</span>
                                   </label>
                                    <div class="col">
                                        <select name="hotel_ids[]" 
                                        id="hotelSelect"
                                        class="form-select" multiple="multiple">         
                                            <option></option>
                                        </select>
                                        
                                    </div>     
                                </div>
                                <!-- <div class="form-group col">
                                <label >Fasilitas<span class="text-danger">*</span></label>
                                     <div class="container-tag" data-name="hotel_facilities">
                                        <div class="tag-name">
                                            <input type="text" class="input-tag-custom" placeholder="Type and hit enter">
                                        </div>
                                        
                                    </div>
                            </div> -->
                            <!-- <div class="form-group row">
                                    <label class="col-md-3">
                                        Gallery<span class="text-danger">*</span>
                                    </label>
                                    <div class="col-sm-8">
                                        <input type="file" class="form-control-file" name="gallery" onchange="validateFileExtension(this)" multiple="multiple">
                                    </div>
                            </div>   -->
                            
                           
                        </div>
                    </div>
                    <div class="card shadow-sm">
                        <div class="card-header bg-white">
                            <h4 class="card-title mb-0">Harga Paket Travel</h4>
                        </div>
                        <div class="card-body"> 
                               <div class="col">
                                    <%- include('../partials/price_input', { label: 'Quad', name: 'price_quad' }) %>
                                </div>
                                <div class="col">
                                    <%- include('../partials/price_input', { label: 'Triple', name: 'price_triple' }) %>
                                </div>
                                <div class="col">
                                    <%- include('../partials/price_input', { label: 'Double', name: 'price_double' }) %>
                                </div>
                        </div>
                    </div>
         </div>
        <!-- ITINERARY -->
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Rencana Perjalanan</h4>
                    </div>
                    <div class="card-body">
                        <div class="form-group row g-5">
                            <div class="col-md-11">
                                <button type="button" class="btn btn-success btn-block action-btn" id="addRoadmap" name="roadmap_attributes">Add Roadmap</button>
                            </div>
                            <div class="roadmap_option" id="roadmap_option">
                                
                            </div>
                        </div>
                    </div>
                </div>
            </div> 
            <!-- SUBMIT -->
            <div class="col-12 ">
                <div class="float-right mb-3">
                        <button type="submit" 
                        id="submitProductBtn"
                        class="btn btn-success">Simpan Produk</button>                     
                </div>
            </div>  
        </form>
       </div>
    </div> 
</div>