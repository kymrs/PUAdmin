    <% if (menu.children && menu.children.length > 0) { %>
    <li class="list-none">
        <button onclick="toggleDropdown('menu-<%= menu.id_menu %>')" 
            class="w-full flex items-center justify-between px-4 py-3 text-gray-600 dark:text-gray-400 hover:bg-gray-50 dark:hover:bg-slate-700/50 hover:text-primary-600 rounded-xl transition-all group">
            <div class="flex items-center gap-3">
                <i class="<%= menu.icon %> text-xl group-hover:scale-110 transition-transform"></i>
                <span class="font-medium text-sm"><%= menu.nama_menu %></span>
            </div>
            <i id="icon-<%= menu.id_menu %>" class="ph ph-caret-down text-xs transition-transform duration-300"></i>
        </button>

        <div id="menu-<%= menu.id_menu %>" class="hidden overflow-hidden transition-all duration-300 ml-4 mt-1 border-l-2 border-gray-100 dark:border-slate-700 pl-2">
            <ul class="space-y-1">
                <% menu.children.forEach(child => { %>
                    <%- include('menu_item', { menu: child }) %>
                <% }); %>
            </ul>
        </div>
    </li>
<% } else { %>
    <li class="list-none">
        <a href="<%= menu.link %>" 
            class="flex items-center gap-3 px-4 py-3 text-gray-600 dark:text-gray-400 hover:bg-primary-50 dark:hover:bg-primary-500/10 hover:text-primary-600 dark:hover:text-primary-400 rounded-xl transition-colors font-medium text-sm group">
            <i class="<%= menu.icon %> text-xl group-hover:scale-110 transition-transform"></i>
            <span><%= menu.nama_menu %></span>
        </a>
    </li>
<% } %>
    
   