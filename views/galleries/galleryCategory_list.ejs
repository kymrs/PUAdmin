      <div class="row">
        <div class="col-md-12">
          <div class="card">
            <div class="card-header">
              <div class="d-flex align-items-center">
                <h4 class="card-title">Gallery Category Table</h4>
                <a
                  data-bs-toggle="modal"
                  data-bs-target="#galleryCategoryFormModal"
                  class="btn btn-primary btn-round ms-auto"
                  href=""
                >
                  <i class="fa fa-plus"></i>
                  Add Row
                </a>
              </div>
            </div>
            <div class="card-body">

              <div class="table-responsive">
                <table
                  id="galleryCategories"
                  class="display table table-striped table-hover"
                  style="width: 100%"
                >
                  <thead>
                    <tr>
                      <th style="width: 10%">Action</th>
                      <th>Name</th>
                      <th>Slug</th>
                      <th>Created at</th>
                    </tr>
                  </thead>
                  <tfoot>
                    <tr>
                      <th>Action</th>
                      <th>Name</th>
                      <th>Slug</th>
                      <th>Created at</th>
                    </tr>
                  </tfoot>
                  <tbody>
                   
                  </tbody>
                </table>
              </div>
            </div>

              <!-- MODAL FORM GALLERY -->
            <div
              class="modal fade"
              id="galleryCategoryFormModal"
              tabindex="-1"
              role="dialog"
              aria-hidden="true"
            >
              <div class="modal-dialog" role="document">
                <div class="modal-content">
                  <div class="modal-header border-0">
                    <h5 class="modal-title">
                      <span class="fw-mediumbold"> Form</span>
                      <span class="fw-light"> Galery </span>
                    </h5>
                    <button
                      type="button"
                      class="btn-close"
                      data-bs-dismiss="modal"
                      aria-label="Close"
                    ></button>
                  </div>
                  <div class="modal-body">
                    <form id="galleryCategoryForm">
                      <div class="row">
                        <div class="col-sm-12">
                          <div class="form-group form-group-default">
                            <label>Name</label>
                            <input
                              id="name"
                              type="text"
                              class="form-control"
                            />
                            <!-- HIDDEN INPUT -->
                             <input 
                              type="hidden"
                              id="hidden_id_category"
                             />
                          </div>
                        </div>
                        <div class="col-md-6">
                          <div class="form-group form-group-default">
                            <label>Slug</label>
                            <input
                              id="slug"
                              type="text"
                              class="form-control"
                            />
                          </div>
                        </div>
                      </div>
                    </form>
                  </div>
                  <div class="modal-footer border-0">
                    <button
                      type="button"
                      class="btn btn-danger"
                      data-bs-dismiss="modal"
                    >
                      Close
                    </button>
                    <button
                      type="button"
                      id="submitGalleryCategoryBtn"
                      class="btn btn-primary"
                    >
                      Save
                    </button>
                  </div>
                </div>
              </div>
            </div>

          </div>
        </div>
